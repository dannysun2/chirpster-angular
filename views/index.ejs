<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/javascripts/chirpApp.js"></script>
  </head>

  <body ng-app="chirpApp" ng-controller="MainController">
     <div class="container">
        <ui-view></ui-view>
     </div>


     <script type="text/ng-template" id="/home.html">
     <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
        <h2>Chirpster</h2>
        <h5>A Place For The Birds!</h5>
      </div>

      <div ng-repeat="chirp in chirps">

      <blockquote class="blockquote">
        {{ chirp.body }}
        <small>{{ chirp.name }}</small>
      </blockquote>
      </div>

      <form ng-submit="addChirp()" class="form-horizontal">
        <div class="form-group">
          <div class="col-md-12">
            <input type="text" required class="form-control" placeholder="Full Name" ng-model="name">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <input type="textarea" class="form-control" placeholder="Body" ng-model="body">
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <button type="submit" class="btn btn-default btn-block">Chirp</button>
          </div>
        </div>
      </form>

     </div>
     </script>

     <script type="text/ng-template" id="/register">

     </script>
  </body>
</html>
